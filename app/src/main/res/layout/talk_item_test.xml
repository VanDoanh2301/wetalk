<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <com.rey.material.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="#B0B0B0"
            android:outlineSpotShadowColor="#B0B0B0"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <com.rey.material.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="24dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:text="Đây là kí tự gì?"
                    android:fontFamily="@font/roboto_medium"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/vdQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:adjustViewBounds="true"
                        android:padding="1dp"
                        android:scaleType="fitCenter"
                        />
                    <ImageView
                        android:id="@+id/imgQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="8dp"
                        android:adjustViewBounds="true"
                        android:padding="1dp"
                        android:scaleType="fitCenter" />

                </RelativeLayout>

            </com.rey.material.widget.LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.rey.material.widget.RelativeLayout
            android:id="@+id/rltView1"
            style="@style/ripple_btn_tab_widget_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tn_index1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_number"
                android:gravity="center"
                android:text="A"
                android:fontFamily="@font/roboto_medium"
                />


            <TextView
                android:id="@+id/textOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/tn_index1"
                android:layout_weight="1"
                android:background="@drawable/border_textview"
                android:gravity="left|center_vertical"
                android:minHeight="36dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:text="@string/cancel"
                android:fontFamily="@font/roboto_regular"
            />

        </com.rey.material.widget.RelativeLayout>

        <com.rey.material.widget.RelativeLayout
            android:id="@+id/rltView2"
            style="@style/ripple_btn_tab_widget_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tn_index2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_number"
                android:gravity="center"
                android:text="B"
                android:fontFamily="@font/roboto_medium"
                />



            <TextView
                android:id="@+id/textOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/tn_index2"
                android:layout_weight="1"
                android:background="@drawable/border_textview"
                android:gravity="left|center_vertical"
                android:minHeight="36dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:text="@string/cancel"
                android:fontFamily="@font/roboto_regular"
             />

        </com.rey.material.widget.RelativeLayout>
        <com.rey.material.widget.RelativeLayout
            android:id="@+id/rltView3"
            style="@style/ripple_btn_tab_widget_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tn_index3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_number"
                android:gravity="center"
                android:text="C"
                android:fontFamily="@font/roboto_medium"
                 />



            <TextView
                android:id="@+id/textOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/tn_index3"
                android:layout_weight="1"
                android:background="@drawable/border_textview"
                android:gravity="left|center_vertical"
                android:minHeight="36dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:text="@string/cancel"
                android:fontFamily="@font/roboto_regular"
               />

        </com.rey.material.widget.RelativeLayout>
        <com.rey.material.widget.RelativeLayout
            android:id="@+id/rltView4"
            style="@style/ripple_btn_tab_widget_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tn_index4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_number"
                android:gravity="center"
                android:text="D"
                android:fontFamily="@font/roboto_medium"
                 />


            <TextView
                android:id="@+id/textOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/tn_index4"
                android:layout_weight="1"
                android:background="@drawable/border_textview"
                android:gravity="left|center_vertical"
                android:minHeight="36dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:text="@string/cancel"
                android:fontFamily="@font/roboto_regular"
                />

        </com.rey.material.widget.RelativeLayout>



        <LinearLayout
            android:id="@+id/lnExplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#9D9D9D" />

            <TextView
                android:id="@+id/btn_show_explan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:layout_marginTop="12dp"
               />

            <TextView
                android:id="@+id/txExplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_textview"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                />

        </LinearLayout>

    </com.rey.material.widget.LinearLayout>
</ScrollView>