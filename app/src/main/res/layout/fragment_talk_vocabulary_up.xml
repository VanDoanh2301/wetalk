<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EAF3"
    tools:context=".ui.fragment.TalkProvideVideoFragment">

    <com.rey.material.widget.RelativeLayout
        android:id="@+id/activitylayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <com.rey.material.widget.RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/action_view"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3262DC"
                    app:contentInsetStart="0dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/bt_back"
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:background="@drawable/bg_bt_button"
                        android:padding="16dp"
                        android:src="@drawable/arrow_left" />

                    <com.rey.material.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:text="Cung cấp video"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cd_save"
                        android:layout_width="61dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="16dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="4dp">

                        <TextView
                            android:id="@+id/cv_save"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/avertabold"
                            android:gravity="center"
                            android:text="Lưu"
                            android:textColor="@color/blue_sea"
                            android:textSize="14sp" />
                    </androidx.cardview.widget.CardView>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/action_view">

                <com.rey.material.widget.LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.rey.material.widget.RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/bt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            android:layout_marginStart="16dp"
                            app:cardElevation="0dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_date"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical|right"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/ic_chevron_down"
                                android:tint="@color/black" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="32dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center_vertical"
                                android:text="Friday, 27/7/2021"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>

                        <com.rey.material.widget.LinearLayout
                            android:id="@+id/img_open_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_marginStart="8dp"
                            android:layout_toRightOf="@id/bt_date"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_item_preview"
                            android:backgroundTint="@color/white"
                            android:padding="4dp"
                            android:orientation="horizontal">
                            <com.rey.material.widget.ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                app:srcCompat="@drawable/ic_draw_tag"/>
                            <com.rey.material.widget.TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Hastag"
                               android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:textColor="#3262DC"
                                />

                        </com.rey.material.widget.LinearLayout>

                    </com.rey.material.widget.RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/white"
                        android:elevation="4dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="10dp">

                        <com.rey.material.widget.LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.rey.material.widget.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:text="Video cung cấp của bạn "
                                android:textColor="#3262DC"
                                android:textSize="16sp" />

                            <com.rey.material.widget.RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                >

                                <com.rey.material.widget.ImageView
                                    android:id="@+id/img_none"
                                    android:layout_width="match_parent"
                                    android:layout_height="126dp"
                                    android:adjustViewBounds="true"
                                    android:layout_marginTop="16dp"
                                    android:src="@drawable/img_up" />

                                <com.example.wetalk.ui.customview.TalkBodyEditView
                                    android:id="@+id/body_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical" />
                            </com.rey.material.widget.RelativeLayout>

                            <com.rey.material.widget.ImageView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="16dp"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/img_line" />

                            <com.rey.material.widget.LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:weightSum="2">

                                <com.rey.material.widget.LinearLayout
                                    android:id="@+id/img_record"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="8dp"
                                    android:orientation="horizontal">

                                    <com.rey.material.widget.ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:adjustViewBounds="true"
                                        app:srcCompat="@drawable/img_camera"
                                        />
                                    <com.rey.material.widget.TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Quay video"
                                        android:textColor="#3262DC"
                                        android:textSize="16sp"
                                        android:paddingStart="16dp"
                                        />

                                </com.rey.material.widget.LinearLayout>
                                <com.rey.material.widget.LinearLayout
                                    android:id="@+id/img_open"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="8dp"
                                    android:orientation="horizontal">

                                    <com.rey.material.widget.ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:adjustViewBounds="true"
                                        app:srcCompat="@drawable/img_storage"
                                        />
                                    <com.rey.material.widget.TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ảnh/Video"
                                        android:textColor="#3262DC"
                                        android:textSize="16sp"
                                        android:paddingStart="16dp"
                                        />

                                </com.rey.material.widget.LinearLayout>

                            </com.rey.material.widget.LinearLayout>


                        </com.rey.material.widget.LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <com.rey.material.widget.Button
                        android:id="@+id/btn_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_button_1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Xem video hướng dẫn"
                        android:textColor="#3262DC"

                        />
                </com.rey.material.widget.LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </com.rey.material.widget.RelativeLayout>

    </com.rey.material.widget.RelativeLayout>

</com.rey.material.widget.FrameLayout>