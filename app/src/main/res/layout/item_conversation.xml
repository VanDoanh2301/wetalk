<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/edit_text_rounded_corner">
    <androidx.cardview.widget.CardView
        android:id="@+id/img_avata"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="56dp"
        app:cardBackgroundColor="@color/transparent"
        android:background="@color/transparent"
        >

        <com.rey.material.widget.ImageView
            android:id="@+id/img_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/circular_bg"
            android:src="@drawable/bg1" />

    </androidx.cardview.widget.CardView>


    <com.rey.material.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@+id/img_avata"
        android:orientation="vertical">

        <com.rey.material.widget.TextView
            android:id="@+id/user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textSize="18sp"
            app:fontFamily="@font/roboto_medium"
            android:textColor="#000000"
            android:textStyle="bold" />

        <com.rey.material.widget.TextView
            android:id="@+id/last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:fontFamily="@font/roboto_regular"
            android:text="Hello" />
    </com.rey.material.widget.LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:gravity="center">

        <com.rey.material.widget.TextView
            android:id="@+id/tv_add_friend"
            style="@style/ripple_btn_tab_widget_normal"
            android:layout_width="86dp"
            android:layout_height="34dp"
            android:background="@drawable/background_row_top"
            android:gravity="center"
            android:padding="4dp"
            android:text="Kết bạn"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:visibility="gone" />

        <com.rey.material.widget.ImageView
            style="@style/ripple_btn_tab_widget_normal_10"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/tv_add_friend"
            android:padding="4dp"
            android:src="@drawable/ic_close"
            android:visibility="gone" />

    </RelativeLayout>
</com.rey.material.widget.RelativeLayout>