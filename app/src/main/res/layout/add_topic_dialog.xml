<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_row_main"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nội dung...">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.rey.material.widget.LinearLayout
        android:id="@+id/lnl_vocabulary"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.rey.material.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn chủ đề"
            android:textSize="16sp"
            android:paddingStart="6dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#000000"

            />
        <Spinner
            android:id="@+id/sp_topic"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginBottom="8dp"
            />

    </com.rey.material.widget.LinearLayout>


    <com.rey.material.widget.ImageView
        android:id="@+id/img_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_avatar_error"
        />

    <com.rey.material.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.rey.material.widget.LinearLayout
            android:id="@+id/img_record"
            style="@style/ripple_btn_tab_widget_normal_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="12dp">

            <com.rey.material.widget.ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/img_camera" />

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="Video"
                android:textColor="#3262DC"
                android:textSize="16sp" />

        </com.rey.material.widget.LinearLayout>

        <com.rey.material.widget.LinearLayout
            android:id="@+id/img_open"
            style="@style/ripple_btn_tab_widget_normal_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="12dp">

            <com.rey.material.widget.ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/img_storage" />

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="Ảnh"
                android:textColor="#3262DC"
                android:textSize="16sp" />

        </com.rey.material.widget.LinearLayout>

    </com.rey.material.widget.LinearLayout>





</LinearLayout>
