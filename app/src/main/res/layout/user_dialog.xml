<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <com.rey.material.widget.LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_background_user"
        android:minWidth="460.0dip"
        android:orientation="vertical"
        android:padding="16dp">

        <com.rey.material.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <com.rey.material.widget.LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profile_pic_layout"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/white"
                        android:elevation="8dp"
                        android:padding="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="60dp"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_1">

                        <com.rey.material.widget.ImageView
                            android:id="@+id/img_avata"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg1" />

                    </androidx.cardview.widget.CardView>

                    <com.rey.material.widget.LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <com.rey.material.widget.TextView
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/img_b1"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_vertical"
                            android:paddingStart="2dp"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                        <com.rey.material.widget.TextView
                            android:id="@+id/txt_date"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/img_b2"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_vertical"
                            android:paddingStart="2dp"
                            android:text="1/1/2024"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                        <com.rey.material.widget.TextView
                            android:id="@+id/txt_address"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/img_b6"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_vertical"
                            android:paddingStart="2dp"
                            android:text="Quê quán"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                        <com.rey.material.widget.RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <com.rey.material.widget.TextView
                                android:id="@+id/txt_phone"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:layout_toLeftOf="@+id/img_b3"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical"
                                android:paddingStart="2dp"
                                android:text="0327872131"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                        </com.rey.material.widget.RelativeLayout>


                        <com.rey.material.widget.TextView
                            android:id="@+id/txt_gender"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/img_b4"
                            android:focusable="false"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_vertical"
                            android:paddingStart="2dp"
                            android:text="Nam"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </com.rey.material.widget.LinearLayout>
                </com.rey.material.widget.LinearLayout>

            <com.rey.material.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="24dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:elevation="4dp"
                    android:outlineAmbientShadowColor="#56CCF2"
                    android:outlineSpotShadowColor="#56CCF2"
                    app:cardBackgroundColor="#56CCF2"
                    app:cardCornerRadius="10dp">

                    <com.rey.material.widget.Button
                        android:id="@+id/bt_chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="Nhắn tin"
                        style="@style/ripple_btn_tab_widget_normal_10"
                        android:textColor="@color/white" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:outlineAmbientShadowColor="@color/red"
                    android:outlineSpotShadowColor="@color/red"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="10dp">

                    <com.rey.material.widget.Button
                        android:id="@+id/bt_delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="Hủy kết bạn"
                        style="@style/ripple_btn_tab_widget_normal_10"
                        android:textColor="@color/white" />

                </androidx.cardview.widget.CardView>

            </com.rey.material.widget.LinearLayout>

        </com.rey.material.widget.LinearLayout>

    </com.rey.material.widget.LinearLayout>
</com.rey.material.widget.LinearLayout>