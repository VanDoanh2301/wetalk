<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <com.rey.material.widget.FrameLayout
        android:id="@+id/fragmentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.rey.material.widget.RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <org.opencv.android.JavaCameraView
                android:id="@+id/my_camera_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                >
                <com.rey.material.widget.Button
                    android:id="@+id/bt_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_row_main"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Trang chá»§"
                    />
                <com.rey.material.widget.Button
                    android:id="@+id/recordButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/background_row_top"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Quay Video"
                    />

            </LinearLayout>

        </com.rey.material.widget.RelativeLayout>


    </com.rey.material.widget.FrameLayout>


</com.rey.material.widget.RelativeLayout>